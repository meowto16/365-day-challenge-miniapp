{
  "extends": "react-app",
  "rules": {
    "semi": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "no-unused-vars": "off",
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "warn",
      { "vars": "all", "varsIgnorePattern": "^_", "args": "after-used", "argsIgnorePattern": "^_" }
    ]
  },
  "plugins": ["unused-imports"],
  "ignorePatterns": [
    "scripts/*"
  ]
}